@{
    Layout = null;
}

   <h5>Products</h5>
@{


    foreach (var product in ViewBag.ProductList)
    {
        <div class="col-md-4 product-men">
            <div class="men-pro-item simpleCart_shelfItem">
                <div class="men-thumb-item">
                    @foreach (var image in product.Image)
                    {
                        if (image.Filename != null)
                        {
                            <img src="~/Content/Images/Products/@image.Filename" height="200" width="100" alt="" class="pro-image-front">
                            <img src="~/Content/Images/Products/@image.Filename" alt="" class="pro-image-back">
                            break;
                        }
                    }
                    <div class="men-cart-pro">
                        <div class="inner-men-cart-pro">
                            @Html.ActionLink("Quidk View", "QuickView", "Clothes", new { id = product.ProductId }, new { @class = "link-product-add-cart" })
                           @*@<a href="single.html" class="link-product-add-cart">Quick View</a>@*@ 
                        </div>
                    </div>
                    @*@<span class="product-new-top">New</span>@*@
                </div>
                <div class="item-info-product ">
                    <h4><a href=" ">@product.Name</a></h4>
                    <div class="info-product-price">
                        <span class="item_price">₹@product.Price</span>
                        @*@<del>$390.71</del>@*@
                    </div>
                    @Html.ActionLink("Add to Cart", "AddCart", "Clothes", new { id = product.ProductId }, new { @class = "button" })
                </div>
            </div>
        </div>

    }
}
<div class="clearfix"></div>