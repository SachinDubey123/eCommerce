    <script>
            function SignUpValidate()
            {
                var isValid = true;
                if ($('#email_text').val().trim() == "" || !($('#email_text').val().match(/^([\w-\.]+\u0040([\w-]+\.)+[\w-]{2,4})?$/))) {
                    $('#email_text').css('border-color', 'Red');
                    $('#email_text').attr('title', 'Enter Email in proper formate');
                    isValid = false;
                }
                else {
                    $('#email_text').css('border-color', 'lightgrey');
                }
                if ($('#password_text').val().trim() == "" || $('#password_text').val().length < 6) {
                    $('#password_text').css('border-color', 'Red');
                    $('#password_text').attr('title', 'Enter minimum 6 letters Password');
                    isValid = false;
                }
                else {
                    $('#password_text').css('border-color', 'lightgrey');
                }
                if ($('#Firstname').val().trim() == "") {
                    $('#Firstname').css('border-color', 'Red');
                    $('#Firstname').attr('title', 'Firstname is required');
                    isValid = false;
                }
                else {
                    $('#Firstname').css('border-color', 'lightgrey');
                }
                if ($('#Lastname').val().trim() == "") {
                    $('#Lastname').css('border-color', 'Red');
                    $('#Lastname').attr('title', 'Lastname is required');
                    isValid = false;
                }
                else {
                    $('#Lastname').css('border-color', 'lightgrey');
                }
                return isValid;
            }
    </script>

